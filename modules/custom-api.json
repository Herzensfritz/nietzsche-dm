{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Custom API",
        "description": "This is the place to add your own path endpoints"
    },
    "servers": [
        {
            "description": "Endpoint for testing on localhost",
            "url":"/exist/apps/nietzsche-dm"
        }
    ],
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic"
            },
            "cookieAuth": {
                "type": "apiKey",
                "name": "teipublisher.com.login",
                "in": "cookie"
            }
        }
    },
    "paths": {
    	"/api/genesis" : {
    		"get": {
    		"summary": "Retrieve timeline data",
				"operationId": "custom:documentingGenesis",
				"responses": {
					"200": {
						"description": "Timeline data",
						"content": {
							"application/json": {
								"schema": {
									"type": "object"
								}
							}
						}
					}
				}
    		}
    	},
    	"/api/timeline" : {
    		"get": {
    		"summary": "Retrieve timeline data",
				"operationId": "custom:timeline",
				"responses": {
					"200": {
						"description": "Timeline data",
						"content": {
							"application/json": {
								"schema": {
									"type": "object"
								}
							}
						}
					}
				}
    		}
    	},
    	"/api/timeline/{id}" : {
    		"get": {
    		"summary": "Retrieve timeline data",
				"operationId": "custom:timeline",
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"schema": {
							"type": "string",
							"example": "srcD_surface_a11r"
						},
						"required": false
					}
				],
				"responses": {
					"200": {
						"description": "Timeline data",
						"content": {
							"application/json": {
								"schema": {
									"type": "object"
								}
							}
						}
					}
				}
    		}
    	}
    },
    "security": [
        {
            "cookieAuth": []
        },
        {
            "basicAuth": []
        }
    ]
}